<Window x:Class="WpfApp1.Addcit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Addcit" Height="450" Width="800">
    <Grid>
        <Button x:Name="Add" Content="создать" HorizontalAlignment="Left" Margin="222,289,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Height="23" Margin="322,112,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Room" HorizontalAlignment="Left" Height="23" Margin="322,163,0,0" TextWrapping="Wrap" Text="Номер комнаты" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Pay" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Плата" VerticalAlignment="Top" Width="120" Margin="322,217,0,0"/>
        <Button x:Name="Escape" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="446,289,0,0" Click="Escape_Click"/>
        <TextBox x:Name="Name" Foreground="Gray" GotFocus="Name_GotFocus"  HorizontalAlignment="Left" Height="23" Margin="322,66,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120" />

    </Grid>
</Window>
